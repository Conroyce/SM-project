<div class="abs">
  <div class="row response-wrapper">
    <div class="top-pad">
      {{#each}}
        {{#if id}}
          <div class="row space-bot-1">
            <div class="col-xs-10">
              <h3>{{name}} <span class="date">{{date}}</span></h3>
            </div>
            <div class="col-xs-2">
              <p class="num">{{num}}</p>
            </div>
          </div> 
        {{else}}  
          <div class="row">
            <div class="col-xs-12">
              <p class="question">{{question}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <p>{{answer}}</p>
            </div>
          </div>
        {{/if}}      
      {{/each}}
    </div> 
    <div class="row bot-pad-show">
    </div> 
  </div>  
</div>